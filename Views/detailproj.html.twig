{% extends "index.html.twig" %}

{% block section %}


		<h1 class="text-center pb-3">
		{{projs.titre}}
			</h1>
		<p class="px-2 px-md-5 mx-2 mx-md-5 text-center mb-3">
			{{projs.descproj}}
		</p>
		<!-- Détails du projet -->
		<div class="row">
			<div class="col-md-10 mx-auto text-center">
				<!-- Deux div en row -->
				<div class="row ">
					<!-- Div de gauche -->
					<div class="col-md-6">
						<p><strong>Catégorie : </strong> {% for detailcate in detailcates %}{{detailcate.nomcate}}{% endfor %}</p>
						<p><strong>Tags : </strong>{% for detailtag in detailtags %} {{detailtag.nomtag}} {% endfor %}</p>
						<p><strong>Créateur(s) :</strong>{% for detailuti in detailutis %} {{detailuti.prenom}} {{detailuti.nom}}{% endfor %}</p>
						<p><strong>Contexte : </strong>{% for detailcont in detailconts %}{{detailcont.identifiant}} - {{detailcont.semestre}} - {{detailcont.intitule}}{% endfor %}</p>
						<p><strong>Lien de la démo : </strong><a href="{{projs.liendemo}}">{{projs.liendemo}}</a></p>
						<p> <strong>Lien des sources : </strong> {% for detailsource in detailsources %}<a href="{{detailsource.url}}">{{detailsource.url}}</a>{% endfor %}</p>
					</div>
					<!-- Div de droite avec l'image de représentation -->
					<div class="col-md-4 text-center">
						<img src="img/{{projs.image}}" alt="Image de représentation du projet" class="img-fluid">
						<p class="mt-3 text-end">
							<strong>Année de création :</strong> {{projs.anneecrea}}
						</p>
					</div>
				</div>

				<!-- Bouton de retour -->
				<div class="text-center">
					<a href="?action=projets" class="btn btn-primary mt-3">Retour aux projets</a>
				</div>
			</div>
		</div>

	<div class="container mt-5">
		<h2>Commentaires</h2>

		<!-- Affichage des commentaires -->

					<div class="card">
						{% for comment in comments %}
						<div class="card-body">

							<div class="d-flex flex-start align-items-center">
								<img class="rounded-circle shadow-1-strong me-3"
									 src="photodeprofil/{{comment.utilisateur.photodeprofil}}" alt="photo de profil" width="60"
									 height="60" />
								<div>
									<h6 class="fw-bold text-primary mb-1">{{comment.utilisateur.prenom}} {{comment.utilisateur.nom}}</h6>
									<p class="text-muted small mb-0">
										Publié le {{comment.datepublimess}}
									</p>
								</div>
							</div>

							<p class="mt-3 mb-4 pb-2 text-dark">
								{{comment.messcom}}
							</p>

						</div>
						{% endfor %}
					</div>



		<!-- Formulaire d'ajout de commentaire -->
		<form action="index.php" method="post" class="mt-3">
			<div class="form-group">
				<label for="messcom">Ajouter un commentaire :</label>
				<textarea class="form-control" id="messcom" name="messcom" rows="3" required></textarea>
			</div>
			<input  type="hidden" id="idutilisateur" name="idutilisateur" value="{{idutilisateur}}"/>
			<input  type="hidden" id="idprojet" name="idprojet" value="{{projs.idprojet}}"/>

			<button type="submit" name="ajouter_comment" class="btn btn-primary mt-2">Ajouter un commentaire</button>
		</form>
	</div>
{% endblock %}
