
{% extends "index.html.twig" %}

{% block section %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <legend class="text-center pb-3">Ajouter un projet </legend>
            <div class="col-lg-5">
                <form action="ajout_projet.php" method="post">
                    <div class="form-group mb-3">
                        <label for="titre">Titre</label>
                        <input type="text" class="form-control" id="titre" name="titre" required placeholder="Entrez le titre du projet" value="{{ proj.titre }}">
                    </div>

                    <div class="form-group mb-3">
                        <label for="image">Image du projet</label>
                        <input type="file" class="form-control-file" id="image" name="image" value="{{ proj.image}}">
                    </div>

                    <div class="form-group mb-3">
                        <label for="nom">Nom</label>
                        <input type="text" class="form-control" id="nom" name="nom" placeholder="Nom du créateur du projet">
                    </div>

                    <div class="form-group mb-3">
                        <label for="tags">Tags</label>
                        <input type="text" class="form-control" id="tags" name="tags" placeholder="Tags du projet">
                    </div>

                    <div class="form-group mb-3">
                        <label for="contexte">Contexte</label>
                        <input type="text" class="form-control" id="contexte" name="contexte" placeholder="Contexte du projet">
                    </div>

                    <div class="form-group mb-3">
                        <label for="semestre">Semestre</label>
                        <input type="text" class="form-control" id="semestre" name="semestre" placeholder="Semestre du projet">
                    </div>

                    <div class="form-group mb-3">
                        <label for="intitule">Intitulé</label>
                        <input type="text" class="form-control" id="intitule" name="intitule" placeholder="Intitulé du projet">
                    </div>
            </div>

            <div class="col-lg-5">
                <div class="form-group mb-3">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="6" placeholder="Description du projet" >{{ proj.descriptionproj }}</textarea>
                </div>

                <div class="form-group mb-3">
                    <label for="lien_demo">Lien démo</label>
                    <input type="text" class="form-control" id="lien_demo" name="lien_demo" placeholder="Lien vers la démo" value="{{ proj.liendemo }}">
                </div>

                <div class="form-group mb-3">
                    <label for="sources">Sources</label>
                    <input type="text" class="form-control" id="sources" name="sources" placeholder="Liens vers les sources">
                </div>

                <div class="form-group mb-3">
                    <label for="identifiant">Identifiant</label>
                    <input type="text" class="form-control" id="identifiant" name="identifiant" placeholder="Identifiant du projet">
                </div>

                <div class="form-group mb-3">
                    <label for="annee_creation">Année de création</label>
                    <input type="text" class="form-control" id="annee_creation" name="annee_creation" placeholder="Année de création du projet">
                </div>
            </div>

            <!-- Bouton en dehors des colonnes, centré et plus large -->
            <div class="col-lg-12 text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg px-5 py-2">Ajouter</button>
            </div>
            </form>
        </div>
    </div>

{% endblock %}